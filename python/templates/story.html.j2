{% extends "base.html.j2" %}

{% block body %}
<div class="container">
    <div class="character-header">
        <h2>{{ name }}'s Adventure</h2>
    </div>
    <div class="story-box">
        <p>{{ story_text }}</p>
    </div>
    <div class="choice-section">
        <h3>What do you do next?</h3>
        <form method="GET" action="/continue_story">
            <!-- Hidden fields to maintain state -->
            <!-- While he may not have really helped, I thank Evan M for the valuable lessons I learned watching him suffer through this -->
            <!-- the eventual solution was provided by w3 schools -->
            <input type="hidden" name="story_history" value="{{ story_history }}">
            <input type="hidden" name="name" value="{{ name }}">
            <input type="hidden" name="theme_color" value="{{ theme_color }}">
            
            <label for="choice">Describe your action:</label><br>
            <textarea id="choice" name="choice" rows="3" cols="50" required
                      placeholder="Type what you want to do next... it could be anything!"></textarea><br>
             <!-- I learned how to change the button color from w3 schools, as far as I can tell this is the best way to do it, pardon my style attribute -->
            <input type="submit" value="Continue Adventure" class="submit-btn" style="background-color: {{ theme_color }};">
        </form>
        
        <div class="action-buttons">
            <!-- I learned how to do this from w3 schools -->
            <a href="{{ url_for('index') }}" class="restart-link">Start New Adventure</a>
        </div>
    </div>
</div>
{% endblock %}
