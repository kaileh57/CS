{% extends 'base.html.j2' %}

{% block body %}
<h1>Matches</h1>
<form action="create_match" method="post" class="form-group">
    <label for="name">Lobby Name:</label>
    <input type="text" id="name" name="name" required>
    <button type="submit">Create Match</button>
</form>
<form action="matches" method="get" class="form-group">
    <label>
        <input type="checkbox" name="show_all" value="1" {% if show_all %}checked{% endif %}
            onchange="this.form.submit()">
        Show All Lobbies
    </label>
</form>
<table class="styled-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>IP Address</th>
            <th>Player 1 Name</th>
            <th>Player 2 Name</th>
            <th>Player 1 Last Ping</th>
            <th>Player 2 Last Ping</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for match in matches %}
        <tr>
            <td>{{ match.id }}</td>
            <td>{{ match.name }}</td>
            <td>{{ match.ipaddress }}</td>
            <td>{{ match.p1name }}</td>
            <td>{{ match.p2name }}</td>
            <td>{{ match.p1lastping }}</td>
            <td>{{ match.p2lastping }}</td>
            <td>
                {% if not match.p2name and match.p1name != session['username'] %}
                <form action="join_match/{{ match.id }}" method="post">
                    <button type="submit">Join</button>
                </form>
                {% endif %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="8" style="text-align: center;">no relevant matches found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<br>
<a href="welcome">Back to Welcome Page</a>
{% endblock %}